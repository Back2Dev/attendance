{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "server",
      "restart": true,
      "port": 9229,
      "timeout": 60000
    },
    {
      "type": "chrome",
      "request": "attach",
      "sourceMaps": true,
      "name": "Attach Chrome",
