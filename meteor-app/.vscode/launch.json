{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "server",
      "restart": true,
      "port": 9229,
      "timeout": 60000
    },
    {
      "type": "chrome",
      "request": "attach",
      "sourceMaps": true,
      "name": "Attach Chrome",
      "url": "http://localhost:3030",
      "webRoot": "${workspaceFolder}",
      "run chrome like this:": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome --remote-debugging-port=9222",
      "navigate to:": "http://localhost:3030/ (home page)",
      "port": 9222
    },
    ///Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --remote-debugging-port=9222 --no-first-run --no-default-browser-check --user-data-dir=$(mktemp -d -t 'chrome-remote_data_dir')
    {
      "type": "chrome",
      "request": "launch",
      "sourceMaps": true,
      "name": "Attach to matching",
      "url": "http://localhost:3030/shop/registered",
      "webRoot": "${workspaceFolder}",
      "run chrome like this:": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome --remote-debugging-port=9222",
      "navigate to:": "http://localhost:3030/ (home page)",
      "port": 9222
    },
    {
      "type": "chrome",
      "request": "attach",
      "sourceMaps": true,
      "name": "Attach to useradmin",
      "url": "http://localhost:3030/useradmin",
      "webRoot": "${workspaceFolder}",
      "run chrome like this:": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome --remote-debugging-port=9222",
      "navigate to:": "http://localhost:3030/ (home page)",
      "port": 9222
    },
    {
      "type": "chrome",
      "request": "attach",
      "sourceMaps": true,
      "name": "Attach to shop/checkout",
      "url": "http://localhost:3030/shop/checkout",
      "webRoot": "${workspaceFolder}",
      "run chrome like this:": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome --remote-debugging-port=9222",
      "navigate to:": "http://localhost:3030/ (home page)",
      "port": 9222
    }
  ],
  "compounds": [
    {
      "name": "Meteor: All",
      "configurations": ["server", "Attach Chrome"]
    }
  ]
}
